<%= form_with(model: @comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h5>
      <ul class="list-unstyled">
        <% @comment.errors.each do |error| %>
          <li class="alert alert-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field py-2">
    <%= f.label :body, class: "pb-2" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="py-4 d-flex">
    <p>Rating:</p>
    <div class="form-check form-check-inline">
      <%= f.radio_button :rating, '1', class: "my-1" %>
      <%= label :rating_1, '1', class: "pr-3" %>
      <%= f.radio_button :rating, '2', class: "my-1" %>
      <%= label :rating_2, '2', class: "pr-3" %>
      <%= f.radio_button :rating, '3', class: "my-1" %>
      <%= label :rating_3, '3', class: "pr-3" %>
      <%= f.radio_button :rating, '4', class: "my-1" %>
      <%= label :rating_4, '4', class: "pr-3" %>
      <%= f.radio_button :rating, '5', class: "my-1" %>
      <%= label :rating_5, '5', class: "pr-3" %>
    </div>
  </div>

  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :product_id %>

  <div>
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>