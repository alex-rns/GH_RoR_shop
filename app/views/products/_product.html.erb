<div class="col-4 mb-4">
  <div class="card m-3 h-100" style="width: 18rem;">
    <%=link_to(image_tag('https://picsum.photos/320/240', class: "card-img-top p-2"), product_path(product)) %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to product.name.truncate(25), product_path(product)%></h5>
      <p> Category: <%= product.category.name %></p>
      <p class="card-text"><%= product.description.truncate(50) %></p>
      <p><%= number_to_currency(product.price, unit: "UAH", separator: ",", delimiter: " ", format: "%n %u") %></p>
    </div>
  </div>
</div>

