<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse sticky-top h-100 p-3">
  <div class="sidebar-sticky pt-3">
    <h3>Category:</h3>
    <ul class="nav flex-column">
      <li class="nav-item text-danger">

          <% Category.where(parent_id: nil).each do |category| %>
            <%= link_to_unless_current category.name.upcase, category_path(category), class: "nav-link p-0" %>

            <% category.subcategories.each do |subcategory| %>
              <%= link_to_unless_current subcategory.name.upcase, subcategory, class:"nav-link p-0 ml-4" %>
            <% end %>

          <% end %>
      </li>
    </ul>
  </div>
</nav>

